extends common/layout

block title
  title Log in

block content
  main
    section.log-in
      .container
        h1.title.title--secondary.title--center.log-in__title ENGAGE<sup>+</sup> Log in
        .log-in__inner
          form.form(method="POST" name="log-in")
            .form__content.log-in__form-content
              .form__inputs.log-in__inputs
                label.control.form__control
                  input.input.control__input(type="email" data-input required)
                  span.control__label Email
                  span.control__error Error message
                label.control.form__control(data-control)
                  input.input.input--password.control__input(type="password" data-input required)
                  span.control__label Password
                  span.control__error Error message
                  button.control__password-toggle(data-password-toggle type="button")
                    <svg class="control__password-toggle-show" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
